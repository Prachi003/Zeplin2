<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_marginTop="-15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_430sdp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bag_icon"
                android:layout_above="@+id/viewPager"
                android:layout_marginBottom="-60dp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/viewPager"
                android:layout_marginTop="-90dp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:src="@drawable/close"
                android:background="@drawable/pageviewer_overlap_bg" />
            <LinearLayout
                android:id="@+id/dotLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="-50dp"
                android:layout_below="@+id/viewPager"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/viewPager">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvItemNameVariety"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibmplexsans_regular"
                        android:text="COATS AND JACKETS"
                        android:textColor="#999999"
                        android:textSize="@dimen/_9sdp" />
                    <TextView
                        android:id="@+id/tvMoveToBag"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/move_to_bag_bg"
                        android:padding="@dimen/_5sdp"
                        android:text="+ INFO"
                        android:textColor="#ff6230"
                        android:textSize="@dimen/_8sdp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/ibmplexsans_regular"
                    android:text="Jackets Shinny Fit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/tvItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibmplexsans_semibold"
                        android:text="$ 39.00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp">
                        <RatingBar
                            android:id="@+id/myRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1"
                            android:isIndicator="false"
                            android:progressTint="@color/colorAccent"
                            android:progressBackgroundTint="#828282"
                            android:secondaryProgressTint="#828282"
                            style="@style/RatingBarfeed"/>
                        <TextView
                            android:id="@+id/tvStartNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(100)"
                            android:textSize="@dimen/_8sdp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_arrow"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:background="#f8f8f8"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/size"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColor="#333333"
            android:fontFamily="@font/ibmplexsans_medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:text="XS"
                android:textSize="@dimen/_9sdp"
                android:gravity="center"
                android:background="@drawable/small_size_border"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="#333333"
                android:fontFamily="@font/ibmplexsans_regular"/>
            <TextView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:text="S"
                android:textSize="@dimen/_9sdp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_7sdp"
                android:background="@drawable/small_size_border"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="#333333"
                android:fontFamily="@font/ibmplexsans_regular"/>
            <TextView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:text="M"
                android:textSize="@dimen/_9sdp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_7sdp"
                android:background="@drawable/dashed_border"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="#333333"
                android:fontFamily="@font/ibmplexsans_regular"/>
            <TextView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:text="L"
                android:textSize="@dimen/_9sdp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_7sdp"
                android:background="@drawable/small_size_border"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="#333333"
                android:fontFamily="@font/ibmplexsans_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="@dimen/_15sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_available"
                    android:textColor="#333333"
                    android:fontFamily="@font/ibmplexsans_medium"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvRecyclerColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"/>
                <!--<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">
                    <TextView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@color/black"/>
                    <TextView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="#efce4a"
                        android:layout_marginLeft="@dimen/_7sdp"/>
                    <TextView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="#333333"
                        android:layout_marginLeft="@dimen/_7sdp"/>
                    <TextView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="#e0910c"
                        android:layout_marginLeft="@dimen/_7sdp"/>
                    <TextView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="#705d22"
                        android:layout_marginLeft="@dimen/_7sdp"/>
                </LinearLayout>-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO OF ITEM"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:textColor="#333333"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/ibmplexsans_medium"/>
                <LinearLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:weightSum="3"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/edittext_bg">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_8sdp"
                        android:background="@drawable/minus_icon"/>
                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="#828282"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_8sdp"/>
                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="#828282"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_8sdp"
                        android:background="@drawable/add_icon"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8">
            <ImageView
                android:id="@+id/ivBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:src="@drawable/splash_bg" />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivBackground"
                android:layout_marginTop="-50dp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/llGuarantee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/white">
                        <View
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="1dp"
                            android:background="#828282"
                            android:layout_margin="@dimen/_10sdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guaranteed Safe Checkout"
                            android:fontFamily="@font/ibmplexsans_bold"
                            android:textColor="#333333"
                            android:textSize="@dimen/_8sdp"/>
                        <View
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height=".5dp"
                            android:background="#828282"
                            android:layout_margin="@dimen/_10sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:background="@color/white"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_weight="1"
                            android:src="@drawable/app_ico"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_weight="1"
                            android:src="@drawable/app_ico"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_weight="1"
                            android:src="@drawable/app_ico"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_weight="1"
                            android:src="@drawable/app_ico"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Free worldwide shipping on all orders over $50"
                        android:fontFamily="@font/ibmplexsans_bold"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_discount"
                        android:drawableLeft="@drawable/check_icon"
                        android:textSize="@dimen/_7sdp"
                        android:fontFamily="@font/ibmplexsans_light"
                        android:padding="5dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_10sdp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_free_shipping"
                        android:drawableLeft="@drawable/check_icon"
                        android:textSize="@dimen/_7sdp"
                        android:fontFamily="@font/ibmplexsans_light"
                        android:padding="5dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_10sdp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_similar"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColor="#333333"
            android:fontFamily="@font/ibmplexsans_medium"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvRecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRelatedProduct"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:background="#f8f8f8"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColor="#333333"
            android:fontFamily="@font/ibmplexsans_medium"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvRecyclerDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRelatedProduct"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_15sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/wishlist_black_icon"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/wishlist_black_border"/>
            <LinearLayout
                android:id="@+id/llAddToCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fe662f"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bag_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add To Cart"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibmplexsans_regular"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>